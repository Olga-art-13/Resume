<main class="row-12">
   {{#with navigation}}
      <ul class="nav">
          {{#each links}}
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">{{text}}</a>      
            </li>
          {{/each}}
      </ul>
    {{/with}}
    <hr/>
    <h1 class="title text-start pb-5">{{header}}</h1>
    <div class="row gx-5">
            <div class="col-sm-5 mb-2 ms-5">
                <div class="card">
                    <div class="card-body">          
                    <button type="button" class="btn btn-success col-auto btn-sm my-2">Швидке замовлення</button>
                    <button type="button" class="btn btn-danger col-auto btn-sm my-2">Видалити</button><br>
                    <button type="button" class="btn btn-info col-auto btn-sm">Детальніше</button>              
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                 <div class="card">
                    <div class="card-body">
                       {{#with total}}
                       <h2 class="title text-start pb-5">{{title}}</h2>
                        {{#each item_list}}
                         <ul>
                            {{name}}{{price}}                          
                         </ul>
                        {{/each}}
                        <hr/>
                        {{#each additional_info}}
                        <ul>
                            {{text}} {{value}}                          
                         </ul>  
                        {{/each}}
                        <hr/>
                        {{#with total_price}}
                          <ul>
                            {{text}} {{value}}                          
                         </ul>    
                        {{/with}}
                        <hr/>
                        <button type="button" class="btn btn-primary col-auto btn-sm my-2">Підтвердити замовлення</button><br>
                        <button type="button" class="btn btn-outline-primary col-auto btn-sm">Відмінити купони</button>  
                       {{/with}} 
                    </div>   
                 </div>
            </div>
    </div>
    {{#with contacts_data}}
     <h2 class="title text-start pb-5">{{title}}</h2>
    <button type="button" class="btn btn-warning col-auto me-3 mb-3">
            <p>Я новий покупець</p>
    </button> 
     <button type="button" class="btn btn-outline-warning col-auto mb-3">
            <p>Я постійний покупець</p>
    </button> 
    {{/with}}
    <form class="row g-3">
     <div class="col-md-6">
      <label for="surname" class="form-label">Прізвище</label>
      <input type="text" class="form-control" id="surname" placeholder="Іванов">
      <div class="form text text-caption">Surname</div>
     </div>
     <div class="col-md-6">
      <label for="name" class="form-label">Ім’я</label>
      <input type="text" class="form-control" id="surname" placeholder="Іван">
      <div class="form text text-caption">Введіть Ім’я</div>
     </div>
     <div class="col-md-6">
      <label for="mobiletelefon" class="form-label">Мобільний телефон</label>
      <input type="text" class="form-control" id="mobiletelefone" placeholder="+38 (XXX) XXX XX XX">
      <div class="form text text-caption">Введіть телефон</div>
     </div>
     <div class="col-md-6">
      <label for="mobiletelefon" class="form-label">Мобільний телефон</label>
      <input type="text" class="form-control" id="emailform" placeholder="ivanivanov@ukr.net">
      <div class=" form-text-caption">Введіть Пошту</div>
     </div>
     <hr/>
     <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Отримувати інформацію про новинки</label>
     </div>
     <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
        <label class="form-check-label" for="flexSwitchCheckChecked">Отримувати інформацію про новинки</label>
    </div>
    </form>
    <hr/>
    <div >
        {{#with delivery}} 
        <div class="card row">
            <div class="card-body">
                    <h2 class="title text-start pb-2">{{title}}</h2>
                    <div class="row">
                        <div class="col-12 input-group">
                            {{#each select}}
                            <label class="form-label">{{label}}</label><br>
                            <input type="text" class="form-control col-md-auto" id="emailform" placeholder="{{placeholder}}">
                             <select>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/each}} 
                        </div> 
                    </div>
            </div>
        </div>
        <div class="form-check mt-4">
            {{#each delivery_type}}
                <ul>
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">{{type}}</label> 
                </ul>
            {{/each}}
        </div>
        <hr/>
         <div class="form-check mt-4">
          {{#with payment}}
            <h2 class="title text-start pb-2">{{title}}</h2>
            {{#each list}}
                <ul>
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">{{type}}<p>{{description}}</p></label> 
                </ul>
            {{/each}}
          {{/with}}  
         </div>
         <hr/>
        <form class="row g-3">
        <h2 class="title text-start pb-2">Контактні дані отримувача</h2>
        <div class="col-md-6">
            <label for="surname" class="form-label">Прізвище</label>
            <input type="text" class="form-control" id="surname" placeholder="Іванов">
            <div class="form text text-caption">Surname</div>
        </div>
        <div class="col-md-6">
            <label for="name" class="form-label">Ім’я</label>
            <input type="text" class="form-control" id="surname" placeholder="Іван">
            <div class="form text text-caption">Введіть Ім’я</div>
        </div>
        <div class="col-md-6">
            <label for="mobiletelefon" class="form-label">Мобільний телефон</label>
            <input type="text" class="form-control" id="mobiletelefone" placeholder="+38 (XXX) XXX XX XX">
            <div class="form text text-caption">Введіть телефон</div>
        </div>
        <div class="col-md-6">
        <label for="mobiletelefon" class="form-label">Мобільний телефон</label>
        <input type="text" class="form-control" id="emailform" placeholder="ivanivanov@ukr.net">
        <div class=" form-text-caption">Введіть Пошту</div>
        </div>
        <hr/>
    </form>
    {{/with}}
    </div>
    <div>
       {{#with coupon}}
            <h2 class="title text-start pb-2">{{title}}</h2>
            <div class="input-group"><br>
                {{#with select}}
                    <ul>    
                       {{#with availabel_coupon}}
                         <label class="form-label">{{label}}</label>
                        <input type="text" class="form-control form-control-lg col-md-auto" id="emailform" placeholder="{{placeholder}}">
                        <select>
                            {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                       {{/with}}
                       <br>
                       {{#with friend_coupon}}
                       <label class="form-label">{{label}}</label>
                       <input type="text" class="form-control form-control-sm col-md-auto" id="emailform" placeholder="{{placeholder}}">
                       <select>
                            {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                       {{/with}}
                       <br>
                   </ul>   
                {{/with}}
                {{#with add}}
                    <ul>
                        {{#with friend}}
                          <label class="form-label">{{label}}</label>
                          <input type="text" class="form-control form-control-lg col-md-auto" id="emailform" placeholder="{{placeholder}}">
                          <p class="text text-sm">{{caption}}</p>
                        {{/with}}
                        {{#with colleague}}
                          <label class="form-label">{{label}}</label>
                          <input type="text" class="form-control form-control-sm col-md-auto" id="emailform" placeholder="{{placeholder}}">
                          <p class="text text-sm">{{caption}}</p>
                        {{/with}}
                    </ul>
                {{/with}}
            </div>
       {{/with}} 
    <hr/>
    </div>
    <div>
       {{#with quiz}}
       <ul>
        <h2 class="title text-start pb-2">{{title}}</h2>
        <div class="form-check mt-4">
        {{#with preference}}
        <p class="title text-start pb-2">{{title}}</p>   
                <ul>
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">{{options}}</label>                                
                </ul>
        {{/with}}
        </div>
        <br>
        <div class="col-12 input">
          {{#with your_expirience}}
             <label class="form-label">{{label}}</label>
             <input type="text" class="form-control col-md-auto" id="text">
          {{/with}}  
        </div>
        <br>
        <div class="col-12 input">
            {{#with purchase_frequency}}
            <label class="form-label">{{label}}</label>
            <input type="text" class="form-control col-md-auto" id="text" placeholder="{{placeholder}}">
            <select>
                {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
            {{/with}}
        </div>
        <br>
       <div class="form-check">
            {{#with factors}}
            <p class="title text-start pb-2">{{title}}</p>
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
             {{options}}
            </label>
            {{/with}}
        </div>
       </ul>
       {{/with}} 
    </div>
    <hr/>
    <footer class="mb-5">
        {{#each footer }}
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="#">{{text}}</a>
            </li>
        </ul>
        {{/each}}   
    </footer>


    



   



</main>