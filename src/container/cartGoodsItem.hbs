<div>
    {{#each goodsBlock}}
        <ul>
            <div class="card mb-3" style="max-width:560px;">
                <div class="row g-0">
                    <div class="col md-4">
                        <img src="{{image}}" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                             <h5 class="card-title">{{name}}</h5>
                              <table class="table table-borderless">
                                <tr>
                                    <td><p class="card-text">{{description}}</p></td>
                             {{#with price}}
                                    <td><p class="card-text">{{title}}</p><b>{{value}}</b></td>
                             {{/with}}
                              <td><p>{{amount}}</p></td>
                              <td>
                                <a href="#" class="btn btn-primary mb-1 md-4">Додати</a>
                                <a href="#" class="btn btn-outline-danger md-4">Видалити</a>
                              </td>
                              </tr>
                              </table>
                        </div>
                    </div>
                </div>
            </div>
        </ul>
    {{/each}}
<hr/>
</div>