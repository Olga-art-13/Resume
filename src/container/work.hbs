<div>
    {{#with main}}   
        <main>
            <section>
             {{>title data="Work History" big=true}}
        
                <div>
                    <ul>
                        {{#each works}}
                            <li>
                                <div>{{position}}</div>

                                <br>

                                <div>
                                    {{duration.from}}-
                                    {{#if duration.to}} 
                                        {{duration.to}} 
                                    {{else}} 
                                        (now working) 
                                    {{/if}}
                                </div>

                                <br>

                                <div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>
                                <br>
                                <br>
                                
                               
                                    {{#if url}} 
                                       {{>link text=company.name href=company.url blank=true noLine=true}}
                                    {{else}} 
                                        <b>{{company.name}}</b>
                                    {{/if}}   
                                <br>
                                <br>

                                <div><strong>Projects ({{pojectAmount}})</strong></div>

                                <br>

                                <ul>
                                    {{#each projects}}
                                        <li>
                                            <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                            <br>
                                            <div><h4>{{about}}</h4></div>
                                            <br> 
                                            <div>
              
                                                <em>Project stacks ({{stackAmount}})</em>
                                            </div>
                                            <br>                     
                                            {{#each stacks}}
                                                <li>
                                                    <div>{{name}}</div>
                                                </li>
                                            {{/each}}                                           
                                            <br>
                                            <div>
                                                <em>Project awards({{awardAmount}}) </em>
                                            </div>
                                            <br>
                                            {{#each awards}}
                                                <li>
                                                    <div>{{name}}</div>
                                                </li>
                                            {{/each}}     
                                        </li> 
                                        <br>
                                        <br>                                       
                                    {{/each}}
                                </ul>
                            </li>
                            <br>
                               
                        {{/each}}
                    </ul>
                </div>
            </section>
        </main>
    {{/with}}
</div>
