<div class="row">
<section class="nav g-3">
    {{#with navigation}}
       <div class="nav item">
            {{#each links}}
                    <a class="nav-link {{#if @last}}disabled{{/if}}" href="{{link}}">{{text}}</a>
            {{/each}}
       </div>
    {{/with}}
</section>
<section class="nav mt-5 g-3">
 {{#each breadcrumb}}
 <div class="nav-tabs">
    <div class="nav-item">
        <a class="nav-link {{#if @last}}disabled{{/if}}" href="{{url}}">{{name}}</a>
    </div>
 </div>
 {{/each}}
</section>
<section "col-12">
    <h1 class="title mb-3">{{header}}</h1>
     {{#each sortBlock}}
     <div class="btn-toolbar" role="toolbar" aria-label="Button group with nested dropdown">
      <div class="btn-group me-2" role="group" aria-label="group">
             <button type="button" class="btn btn-outline-secondary dropdown-toggle mb-2" data-bs-toggle="dropdown" aria-expanded="false">
             {{placeholder}}
             </button>
              {{#each options}}
              <ul class="dropdown-menu">
               <li><a class="dropdown-item" href="#">{{value}} {{text}}</a></li>
               <li><a class="dropdown-item" href="#">{{value}} {{text}}</a></li>
              </ul>
             {{/each}}
        </div>
     </div>
     {{/each}}
</section>
<div class= "card col-4">
    {{#with filterBlock}}
     <div class="card-body card-text">
       <form>
          {{#with sellers}}
            <h6 class="card-title">{{title}}</h6>
            <div class="form-check">
                 {{#each list}}
                  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">Machinery</label>
                  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">iнші</label>
                {{/each}}
            </div>        
          {{/with}}
          <hr/>
          {{#with brands}}
           <h6 class="card-title">{{title}}</h6>
            <div class="col-auto mb-3">
             {{#with input}}
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="placeholder">
             {{/with}}
            </div>
            <div class="form-check">
                {{#each options}}
                  <ul><input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                      <label class="form-check-label" for="flexCheckDefault">{{value}}</label>
                  </ul>
                {{/each}}
            </div>
          {{/with}}
          <hr/>
          {{#with price}}
          <h6 class="card-title mb-2">{{title}}</h6>
          <div class="col-auto mb-3">
            {{#with range}}
              <input type="text" class="form-control mb-2" id="exampleFormControlInput1" placeholder="{{from}}">
              <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="{{to}}">
            {{/with}}
            {{#with button}}
                <a href="{{link}}" class="btn btn-outline-secondary mt-4">{{text}}</a>
            {{/with}}
          </div>
          {{/with}}
          <hr/>
          {{#each filterList}}
           <ul>
           <h6 class="card-title mb-2">{{title}}</h6> 
           <div class="form-check">
            {{#each options}}
              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">{{value}}</label>
            {{/each}}
           </div>
           <hr/>
           </ul>
          {{/each}}
          <hr/>
       </form>
     </div>   
    {{/with}}
</div>
<div class="col-8">
    {{> catalogItem}}   
</div>
 <section class="col-12 mt-4 mb-5">
            <div class="card text-bg-success">
               {{#with service}}
                 <div class="card-body text-center">
                    <h3 class="card-title">{{title}}</h3>
                    <p>{{description}}</p>
                    {{#each buttons}}
                     <a href="{{link}}" class="btn btn-primary mb-1 md-4">{{text}}</a>
                    {{/each}}
                 </div>
               {{/with}}
            </div>
    </section>
    <hr/>
     <section class="nav g-5">
        {{#each footer}}
            <div class="nav item col-2">
                {{#each this}}
                    <a class="nav-link {{#if @last}}disabled{{/if}}" href="{{link}}">{{text}}</a>
                {{/each}}
            </div>
        {{/each}}
    </section>
</div>