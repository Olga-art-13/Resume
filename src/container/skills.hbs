<div>
    
    
{{#with main}}
    <main>
        <section>
            {{>title data='All skills' big=true}}
            <ul>
                {{#each skills}}
                    <li>
                        {{name}}
                        {{#if point includeZero=true}} ({{point}})  {{/if}}
                        {{#if isTop}} (top) {{/if}}
                        {{#unless point includeZero=true}} (not study) {{/unless}}

                        {{#unless point}}
                            {{#if point includeZero=true}}
                                (now study)
                            {{/if}}
                        {{/unless}}

                    </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{>title data='My hobbies' big=false }}
            <ol>
                {{#each hobbies}}
                <li>
                    {{name}}
                    {{#if isMain includeZero=true}} (favourite) {{/if}}
                </li>
                {{/each}}
            </ol>
        </section>
    </main>
{{/with}}

    

</div>